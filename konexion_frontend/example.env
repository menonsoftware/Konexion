# Frontend Environment Variables - Example Configuration
# Copy this file to .env and configure according to your environment

# Backend API Configuration
# URL of your backend API server
VITE_API_BASE_URL=http://localhost:8000/api

# API proxy path for development (used by Vite dev server)
VITE_API_PROXY_PATH=/api

# WebSocket Configuration
# WebSocket host and port for real-time communication
VITE_WS_HOST=localhost:8000

# WebSocket endpoint path
VITE_WS_PATH=/ws/chat

# Development Configuration
# Set to true for development mode, false for production
VITE_DEV_MODE=true

# Default Model Configuration
# Fallback models when API fails to load models
# JSON string containing array of model objects
VITE_DEFAULT_MODELS='[{"model_id":"llama3-8b-8192","context_window":8192,"owned_by":"meta","client_type":"groq"},{"model_id":"mixtral-8x7b-32768","context_window":32768,"owned_by":"mistral","client_type":"groq"},{"model_id":"gemma-7b-it","context_window":8192,"owned_by":"google","client_type":"groq"}]'

# Performance Configuration
# Buffer flush interval in milliseconds (16ms = 60fps)
VITE_BUFFER_FLUSH_INTERVAL=16

# Minimum chunk size before flushing buffer
VITE_MIN_CHUNK_SIZE=10

# Maximum WebSocket reconnection attempts
VITE_MAX_RECONNECT_ATTEMPTS=5

# AI Model Configuration
# Default max tokens for AI responses
VITE_DEFAULT_MAX_TOKENS=2048
